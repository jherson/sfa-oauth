<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="sfa-qb">
		<jta-data-source>java:jboss/datasources/QuoteBuilderDS</jta-data-source>
		<class>com.sfa.qb.model.entities.Quote</class>
		<class>com.sfa.qb.model.entities.QuoteLineItem</class>
		<class>com.sfa.qb.model.entities.PricebookEntry</class>
		<class>com.sfa.qb.model.entities.Product</class>
		<class>com.sfa.qb.model.entities.Pricebook</class>
		<class>com.sfa.qb.model.entities.PaymentSchedule</class>
		<class>com.sfa.qb.model.entities.LoginHistory</class>
		<class>com.sfa.qb.model.entities.User</class>
		<class>com.sfa.qb.model.entities.Profile</class>
		<class>com.sfa.qb.model.entities.Role</class>
		<class>com.sfa.qb.model.entities.UserPreferences</class>
		<properties>
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />			
		</properties>		
	</persistence-unit>
</persistence>